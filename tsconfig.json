{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "lib": [
      "es2017",
      "dom"
    ],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "rootDir": "src",
    "declaration": true
  },
  "exclude": ["**/*.spec.ts", "**/*.spec.tsx", "**/*.spec.js"],
  "include": ["src"]
}
